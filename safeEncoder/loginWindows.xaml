<Window x:Class="safeEncoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:safeEncoder"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="525">
    <Grid>
        <Label x:Name="userLabel" Content="User" HorizontalAlignment="Left" Margin="159,120,0,0" VerticalAlignment="Top" Width="50"/>
        <Label x:Name="passwordLabel" Content="Password" HorizontalAlignment="Left" Margin="159,151,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="224,154,0,0" VerticalAlignment="Top" Width="130"/>
        <TextBox x:Name="userBox" HorizontalAlignment="Left" Height="18" Margin="224,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <Button x:Name="loginBtn" Content="Login" HorizontalAlignment="Left" Margin="231,190,0,0" VerticalAlignment="Top" Width="75" Click="login"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="42" Margin="454,20,0,0" VerticalAlignment="Top" Width="43" Source="Resources/Add-Male-User.png" Cursor="Hand" GotFocus="getFocus"/>

    </Grid>
</Window>
